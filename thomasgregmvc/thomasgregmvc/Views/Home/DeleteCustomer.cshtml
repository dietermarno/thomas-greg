@using thomasgregmvc.Models
@model thomasgregmvc.Models.Customer
@{
    ViewData["Title"] = "Delete a Customer";
    var imgsrc = Model.Logo;
}
<div class="text-left">
    <h1 class="display-4">Delete a Customer</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="DeleteCustomerApply">
                <input asp-for="Id" class="form-control" hidden />
                <div class="form-group pt-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                </div>
                <div class="form-group pt-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" readonly />
                    @Html.ValidationMessageFor(model => model.Email, "", new { @style="color:red" })
                </div>
                <div class="form-group pt-3">
                    <div class="row">
                        <div class="container pt-3">
                            <div class="col">
                                <img src="@imgsrc" class="img" id="preview" width="100" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group pt-3">
                    <input type="submit" value="Delete Customer" class="btn btn-primary" />
                    <input type="button" value="Cancel" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Home")'" />
                </div>
            </form>
        </div>
    </div>
    <h1 class="display-4 pt-5">Addresses</h1>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Street</th>
                    <th>Number</th>
                    <th>Complement</th>
                    <th>ZipCode</th>
                </tr>
            </thead>
            <tbody>
                @foreach (CustomerAddress address in Model.CustomerAddresses)
                {
                    <tr>
                        <td>@address.Street</td>
                        <td>@address.Number</td>
                        <td>@address.Complement</td>
                        <td>@address.ZipCode</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
